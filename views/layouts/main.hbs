    <title id="doc-title">UnScroll</title>
</head>

<body>


{{> _header}}

<main>
    <div id="main-body">{{{body}}}</div>
</main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

    <script>
        // check if #scroll-body textarea is on the page
        if(document.querySelector('#scroll-body')) {
            // Add the CKEDITOR text editor to the form textarea
            let editor = CKEDITOR.replace('scroll-body', {
                // plugins: 'wysiwygarea, toolbar, basicstyles, link',
            });
            // Enable spell check
            CKEDITOR.config.disableNativeSpellChecker = false;
            // hide notification showing version 4.22.1 is not a secure version
            // maybe star using quillJS ?? https://quilljs.com/
            CKEDITOR.config.versionCheck = false;
            

            // Shows a warning if the scroll body is blank
            editor.on( 'required', (event) => {
                editor.showNotification( 'The scroll body cannot be blank', 'warning', 2000 );
                event.cancel();
            });
        }

    </script>

{{> _footer-main}}

    {{!-- This can't be deferred so I put it here rather than in <head> --}}
    <script src="/js/main.js" type="module"></script>
</body>

</html>