<h1>Scrolls</h1>
<div class="row">
    {{#each scrolls}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>Tags: {{tags}}</p>
                    <p>{{{truncate body 300}}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        <a href="/scrolls/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/scrolls/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Scrolls to display</p>
    {{/each}}
</div>